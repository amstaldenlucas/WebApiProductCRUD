@model ProductVm
@{
    ViewData["Title"] = $"Produto {Model.Name}";
}

<div class="container-fluid py-4">
    <div class="row align-items-center">
        <div class="col-6 mx-auto">

            <div class="card p-2">
                <form method="post" asp-action="Edit">
                    <div class="card-body py-0">
                        <input type="hidden" asp-for="@Model.Id" value="@((Model is null) ? string.Empty : Model.Id)" />
                        <input type="hidden" asp-for="@Model.CreatedUtc" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="form-control-label"></label>
                            <input class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col col-lg-6 col-md-6 mx-auto">
                                <div class="form-group">
                                    <label asp-for="Price" class="form-control-label"></label>
                                    <input class="form-control" asp-for="Price" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col col-lg-6 col-md-6 mx-auto">
                                <div class="form-group">
                                    <label asp-for="Stock" class="form-control-label"></label>
                                    <input class="form-control" asp-for="Stock" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer mt-3">
                        <div class="justify-content-between d-flex">
                            <button type="submit" class="btn btn-secondary w-auto mr-auto"
                                    asp-controller="ProductRegisterW" asp-action="Index">
                                Cancelar
                            </button>
                            <button type="submit" class="btn btn-primary w-auto">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>